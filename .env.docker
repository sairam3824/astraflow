# Database
SQLITE_DB_PATH=/app/data/astraflow.db

# Redis (Docker internal networking)
REDIS_URL=redis://redis:6379/0

# MinIO (Docker internal networking)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=documents

# ChromaDB (Docker internal networking)
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# Kafka (Docker internal networking)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Gemini
GEMINI_API_KEY=your-gemini-api-key

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Celery (Docker internal networking)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Service Ports (internal container ports)
API_GATEWAY_PORT=8000
INGESTION_SERVICE_PORT=8001
EMBEDDING_SERVICE_PORT=8002
AGENT_ROUTER_PORT=8003
WORKFLOW_RUNNER_PORT=8004
STOCK_PRODUCER_PORT=8005
STOCK_ANALYSIS_PORT=8006
GITHUB_ANALYSIS_PORT=8007
